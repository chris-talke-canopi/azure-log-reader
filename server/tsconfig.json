{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types", "../types"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@types/*": ["../types/*"]
        }
    },
    "include": ["src/**/*.ts", "src/public/*", "src/bin/*"],
    "exclude": ["node_modules", "dist"]
}
